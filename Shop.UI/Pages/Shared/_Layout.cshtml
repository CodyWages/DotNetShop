<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bulma/css/bulma.min.css" />
</head>
<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                @if (User.Identity.IsAuthenticated)
                {
                   <a class="navbar-item" asp-page="/Admin/Index"></a>
                }
            </div>

            <div class="navbar-end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-item" asp-controller="Account" asp-action="Logout">Sign Out</a>
                }
                else
                {
                    <a class="navbar-item" asp-page="/Accounts/Login">Sign In</a>
                }
            </div>
        </div>
    </nav>



    <header>
        <a asp-page="/Admin/Index">Admin</a>
        
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await Component.InvokeAsync("Cart")

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Shop.UI
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    

</body>
</html>